    <!-- Navbar -->
 
    <!-- Main content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
            <div class="container">
                <div class="header-body text-center mb-7">
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                            <h1 class="text-white">Hesap Olustur</h1>
                            <p class="text-lead text-white">Sirket ici mesajlasma icin kayıt olunuz.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator separator-bottom separator-skew zindex-100">
                <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
                </svg>
            </div>
        </div>
        <!-- Page content -->
        <div class="container mt--8 pb-5">
            <!-- Table -->
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card bg-secondary border-0">
  
                        <div class="card-body px-lg-5 py-lg-5">
         
                            <form method="post">
                                <br /><br />
                                <label>Adınız</label>
                                <input type="text" class="form-control" asp-for="Name" />
                                <br />
                                <label>Soyadınız</label>
                                <input type="text" class="form-control" asp-for="Surname" />
                                <br />
                                <label>Kullanıcı Adınız</label>
                                <input type="text" class="form-control" asp-for="UserName" />
                                <br />
                                <label>Resim Uzantısı</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" />
                                <br />
                                <label>Email Adresi</label>
                                <input type="text" class="form-control" asp-for="Email" />
                                <br />

                                <label>Şifre</label>
                                <input type="text" class="form-control" asp-for="Password" />
                                <br />
                                <label>Departman</label>

                                @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control" })
                                    <br />
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <br />
                                <button class="btn btn-info">Kayıt Ol</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
