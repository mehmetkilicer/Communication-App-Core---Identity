@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "UserSetting";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}



<div class="main-content" id="panel">
    <!-- Topnav -->
    <!-- Header -->
    <!-- Header -->

    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">

          

           
            </div>
        </div>
    </div>

    <!-- Page content -->

    <div class="container-fluid mt--12">

        <!-- Dark table -->
        <div class="row">
            <div class="col">
                <div class="card bg-default shadow">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="text-white mb-0">Gonderilen Mesaj Detayı</h3>
                    </div>
                    <div class="table-responsive" style="overflow-x: auto;">
                        <table class="table align-items-center table-dark table-flush" style="width: 100%;">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="sort" data-sort="name">Mesajın Alıcısı</th>
                                    <th scope="col" class="sort" data-sort="budget">İsim</th>
                                    <th scope="col" class="sort" data-sort="status">Konu</th>

                                </tr>
                            </thead>
                            <tbody class="list">



                                <tr>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <a href="#" class="avatar rounded-circle mr-3">
                                                <img alt="Image placeholder" src="@Model.ReceiverImageUrl">
                                            </a>

                                        </div>
                                    </th>

                                    <td class="budget">
                                        @Model.ReceiverName @Model.ReceiverSurname
                                    </td>


                                    <td class="budget">
                                        @Model.Subject
                                    </td>


                                </tr>
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="sort" data-sort="name">İcerik</th>
                                    <th scope="col" class="sort" data-sort="name"></th>
                                    <th scope="col" class="sort" data-sort="name"></th>


                                </tr>
                            </thead>
                            <tr>
                                <!-- Yeni satır -->
                                <td colspan="3">
                                    <!-- colspan="3", satırın tüm sütunlarını kaplayacak şekilde ayarlanmıştır -->
                                    <textarea style="background-color:rgb(23,43,77); color: white; border-color: rgb(28,52,93);" class="form-control" rows="6">@Model.Content</textarea>
                                </td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->

    </div>
</div>

