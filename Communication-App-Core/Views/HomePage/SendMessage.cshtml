@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>Identity Meajlasma Ugulaması</title>
    <!-- Favicon -->
    <link rel="icon" href="~/argon-dashboard-master/argon-dashboard-master/assets/img/brand/favicon.png" type="image/png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/argon-dashboard-master/argon-dashboard-master/assets/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/argon-dashboard-master/argon-dashboard-master/assets/vendor/fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/argon-dashboard-master/argon-dashboard-master/assets/css/argon.css?v=1.2.0" type="text/css">
</head>

<body>
    <!-- Navbar -->
    <!-- Main content -->

        <!-- Header -->

        <!-- Page content -->
            <!-- Table -->
        <!-- Header -->
        <div class="header bg-gradient-primary py-1 py-lg-1 pt-lg-1">
            <div class="container">
                <div class="header-body text-center mb-3">
                    <div class="row justify-content-center">
                        <div class="col-xl-3 col-lg-6 col-md-3 px-3">
                            <h1 class="text-white">Mesajlasma Paneli</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator separator-bottom separator-skew zindex-100">
                <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
                </svg>
            </div>
        </div>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-8">
                <div class="card bg-secondary border-0">
                    <div class="card-body px-lg-5 py-lg-5">
                        <form method="post" action="/HomePage/SendMessage">
                            <div class="card-body">
                         
                                @Html.DropDownListFor(x => x.ReceiverId, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control" })
                                    <br />
                                <div class="form-group">
                                    <input class="form-control" placeholder="Konu:" asp-for="Subject">
                                </div>
                                <div class="form-group">
                                    <textarea id="compose-textarea" class="form-control" asp-for="Content" style="height: 300px"></textarea>
                                </div>
                           
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                </div>
                                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer -->

    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/argon-dashboard-master/argon-dashboard-master/assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/argon-dashboard-master/argon-dashboard-master/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/argon-dashboard-master/argon-dashboard-master/assets/vendor/js-cookie/js.cookie.js"></script>
    <script src="~/argon-dashboard-master/argon-dashboard-master/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/argon-dashboard-master/argon-dashboard-master/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <!-- Argon JS -->
    <script src="~/argon-dashboard-master/argon-dashboard-master/assets/js/argon.js?v=1.2.0"></script>
</body>

</html>
